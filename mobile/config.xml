<?xml version='1.0' encoding='utf-8'?>
<widget id="com.arabicbyheart.io" version="0.0.1" ios-CFBundleVersion="0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Arabic by heart</name>
    <description>
        app for learing arabic vocabulary
    </description>
    <author email="kevin.gervais@tutanota.com" href="https://arabicbyheart.herokuapp.com">
       MSV84366NV
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="StatusBarOverlaysWebView" value="true" />
    <icon src="res/20.png" width="20" />
    <icon src="res/29.png" width="29" />
    <icon src="res/40.png" width="40" />
    <icon src="res/50.png" width="50" />
    <icon src="res/57.png" width="57" />
    <icon src="res/58.png" width="58" />
    <icon src="res/60.png" width="60" />
    <icon src="res/72.png" width="72" />
    <icon src="res/76.png" width="76" />
    <icon src="res/80.png" width="80" />
    <icon src="res/87.png" width="87" />
    <icon src="res/100.png" width="100" />
    <icon src="res/114.png" width="114" />
    <icon src="res/120.png" width="120" />
    <icon src="res/144.png" width="144" />
    <icon src="res/152.png" width="152" />
    <icon src="res/167.png" width="167" />
    <icon src="res/180.png" width="180" />
    <icon src="res/1024.png" width="1024" />
    <platform name="android">
        <preference name="StatusBarStyle" value="lightcontent" />
        <allow-intent href="market:*" />
    </platform>

    <platform name="ios">
      <allow-intent href="itms:*" />
      <allow-intent href="itms-apps:*" />
      <preference name="FadeSplashScreenDuration" value="500"/>
      <preference name="WKWebViewOnly" value="true" />
      <preference name="UIWebViewBounce" value="false" />
      <preference name="CordovaWebViewEngine" value="CDVWKWebViewEngine" />
      <preference name="deployment-target" value="12.0" />
      <feature name="CDVWKWebViewEngine">
          <param name="ios-package" value="CDVWKWebViewEngine" />
      </feature>
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-clipboard" spec="~1.3.0" />
</widget>
